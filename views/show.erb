<h1>Pirate</h1>
<p>Name: <%= @pirate.name %></p>
<p>Weight: <%= @pirate.weight %></p>
<p>Height: <%= @pirate.height %></p>


<h2>Ships</h2>

<%@ships.each do |ship| %>
    <div class="ship">
        <h3><%= ship.name %></h3>
        <p>Type: <%= ship.type %></p>
        <p>Booty: <%= ship.booty %></p>
    </div><br>
<% end %>
